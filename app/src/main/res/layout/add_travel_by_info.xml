<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_20dp"
        tools:context=".TravelData">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginEnd="5dp"
            android:text="Add Travel By Details"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/margin_25dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginEnd="5dp"
            android:text="Car/Bike/Train/Bus/Aeroplane"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTravelBySource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPlace"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/round"
            android:hint="Enter Travel By"
            android:padding="@dimen/margin_15dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginEnd="5dp"
            android:text="Travel Expense/Charges"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTravelByCharges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPlace"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/round"
            android:hint="Enter Your Travel Expense"
            android:padding="@dimen/margin_15dp"
            android:textColor="@color/black"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etEnterplace"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTravelByDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvStartDATE"
            android:layout_centerVertical="true"
            android:background="@drawable/round"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_date"
            android:drawableTint="@color/red"
            android:padding="@dimen/margin_15dp"
            android:hint="Select Date"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvStartDATE"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTravelByTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvEndDate"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/round"
            android:drawableRight="@drawable/ic_baseline_more_time_24"
            android:drawableTint="@color/red"
            android:gravity="center_vertical"
            android:hint="Select Time"
            android:padding="@dimen/margin_15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp" />

        <Button
            android:id="@+id/btnAddHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:padding="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="ADD Details"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:padding="@dimen/margin_15dp"
            android:text="Close"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
   </ScrollView>
</layout>