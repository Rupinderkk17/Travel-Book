<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    android:background="@drawable/round"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dp">

    <TextView
        android:id="@+id/tvFoodPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPlace"
        android:hint="Your place"
        android:padding="3dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:alpha="0.2"
        android:background="@color/teal_200" />

    <TextView
        android:id="@+id/tvfoodDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPlace"
        android:layout_marginTop="@dimen/margin_5dp"
        android:hint="food dish"
        android:padding="3dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvFoodDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPlace"
        android:layout_marginTop="@dimen/margin_5dp"
        android:hint="details"
        android:maxLines="2"
        android:padding="3dp"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="4">.

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvEndDate"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFoodDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:hint="Start Date"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="Time:"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFoodTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="00:00"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:backgroundTint="@color/green"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_10dp"
            app:background="@color/red" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:backgroundTint="@color/red"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_10dp"
            app:background="@color/red" />

        <TextView
            android:id="@+id/tvFoodCharges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tvPlace"
            android:gravity="center_vertical|end"
            android:hint="Charges"
            android:padding="3dp"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>