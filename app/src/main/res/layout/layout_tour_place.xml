<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/round"
    android:padding="@dimen/margin_10dp"
    android:layout_margin="@dimen/margin_10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHotelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPlace"
        android:textSize="20sp"
        android:padding="3dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textStyle="bold"
        android:hint="DESTINATION"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:alpha="0.2"
        android:layout_marginBottom="2dp"
        android:background="@color/teal_200"
        />
    <TextView
        android:id="@+id/tvHotelAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPlace"
        android:textSize="18sp"
        android:padding="3dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:hint="Place address"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:background="@drawable/round"
        android:padding="3dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">.
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvEndDate"
            android:text="From:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvStartDATE"
            android:layout_centerVertical="true"
            android:id="@+id/tvStartDATE"
            android:text="Start Date"
            android:layout_weight="1"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvEndDate"
            android:text="to:"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp" />
        <TextView
            android:id="@+id/tvEndDate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvEndDate"
            android:text="End Date"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/margin_10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit"
            android:id="@+id/btnEdit"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_gravity="end"
            app:background="@color/red"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/delete"
            android:id="@+id/btnDelete"
            android:layout_gravity="end"
            app:background="@color/red"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_10dp" />
        <TextView
            android:id="@+id/tvHotelCharges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tvPlace"
            android:textSize="18dp"
            android:padding="3dp"
            android:gravity="center_vertical|end"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            android:hint="Charges"/>
    </LinearLayout>

</LinearLayout>